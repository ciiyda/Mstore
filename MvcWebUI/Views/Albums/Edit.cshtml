@model AlbumModel

@{
    ViewData["Title"] = "Album Edit";
}

<h1>
    @ViewData["Title"]
</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" type="hidden"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitePriceText" class="control-label"></label>
                <input asp-for="UnitePriceText" class="form-control" />
                <span asp-validation-for="UnitePriceText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockAmount" class="control-label"></label>
                <input asp-for="StockAmount" class="form-control" />
                <span asp-validation-for="StockAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearText" class="control-label"></label>
                <input asp-for="YearText" class="form-control date" />
                <span asp-validation-for="YearText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberofDiscs" class="control-label"></label>
                <input asp-for="NumberofDiscs" class="form-control" />
                <span asp-validation-for="NumberofDiscs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SingerId" class="control-label"></label>
                <select asp-for="SingerId" class="form-control" asp-items="ViewBag.Singers"><option value="">--Select--</option></select>
            </div>
            @*<div class="form-group">
                    <label asp-for="Guid" class="control-label"></label>
                    <input asp-for="Guid" class="form-control" />
                    <span asp-validation-for="Guid" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <link href="~/plunigs/bootsrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/plunigs/bootsrap-datepicker/js/bootstrap-datepicker.min.js"></script>


    <Script>
        $(function () {
            $(".date").datepicker({
                
                todayBtn: "linked",
                clearBtn: true,
                orientation: "top auto",
                autoclose:true


            });

        });
    </Script>
}


