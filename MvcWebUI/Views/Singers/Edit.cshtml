@model SingerModel

@{
    ViewData["Title"] = "Edit Singer";

}

<h1>Edit Singer</h1>

<h4>Singer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurName" class="control-label"></label>
                <input asp-for="SurName" class="form-control" />
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDateText" class="control-label"></label>
                <input asp-for="BirthDateText" class="form-control date" />
                <span asp-validation-for="BirthDateText" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            @*<div class="form-group">
                    <label asp-for="Guid" class="control-label"></label>
                    <input asp-for="Guid" class="form-control" />
                    <span asp-validation-for="Guid" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                &nbsp;
                <button id="deletesingerButton" class="btn btn-danger">Delete</button>
            </div>
        </form>
        <from id="deleteSingerFrom" asp-action="Delete" method="post">
            <input asp-for="Id" type="hidden"/>
        </from>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{
    <link href="~/plunigs/bootsrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/plunigs/bootsrap-datepicker/js/bootstrap-datepicker.min.js"></script>


    <Script>
        $(function () {
            $(".date").datepicker({

                todayBtn: "linked",
                clearBtn: true,
                orientation: "top auto",
                autoclose:true


            });
            $("#deletesingerButton").click(function () {
                $("#deleteSingerFrom").submit();
            })

        });
    </Script>
}


