@model IEnumerable<SingerModel>

@{
    ViewData["Title"] = "Singers";


}

<h1>Singers</h1>

<p>
    <a asp-action="Create">Create New Singer</a>
</p>
<p class="bg-primary text-white">
    @{
        string count;
        if (Model != null)
        {
            if (Model.Count() == 0)
            {
                count = "No singer found";
            }
            else if (Model.Count() == 1)
            {
                count = Model.Count() + "singer found";
            }
            else
            {
                count = Model.Count() + " singers found";

            }

        }
        else
        {
            count = "No singers found";
        }

    }
    @count
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDateText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlbumCount)
            </th>
            <th> </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDateText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumCount)
                </td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                </td>
            </tr>
        }
    </tbody>
</table>
